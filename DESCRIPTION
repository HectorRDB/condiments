Package: condiments
Type: Package
Title: Differential Topology, Progression and Differentiation
Version: 1.3.0
Authors@R: c(person("Hector", "Roux de Bezieux", role = c("aut", "cre"),
                     email = "hector.rouxdebezieux@berkeley.edu",
		     comment = c(ORCID = "0000-0002-1489-8339")),
